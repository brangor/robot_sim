// src/__tests__/integration/IO.test.ts

import * as index from '../../index';
import { mockStdin, mockStdout } from "mock-stdio";

describe("IO interactions", () => {
  beforeEach(() => {
    mockStdin.start();
    mockStdout.start();
  });

  afterEach(() => {
    mockStdin.stop();
    mockStdout.stop();
  });

	test('should handle IO correctly', () => {
    // Simulate input
    mockStdin.send('Your input here\n');

    index.main();

    const output = mockStdout.end();
    expect(output).toContain('Expected output based on the input');
  });
});
